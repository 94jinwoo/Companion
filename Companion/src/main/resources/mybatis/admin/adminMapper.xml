<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="adminNotice">

	<select id="selectAll" resultType="adminNoticeBean">
	select @rownum:=@rownum+1 as no, A.* from `article` A where (@rownum:=0)=0 AND board_id=0 order by A.article_id
	</select>
	
	<insert id="insertOne" parameterType="adminNoticeBean">
	insert into `article` values(0,null,#{member_id},#{article_title},#{article_content},now(),0,#{article_image})
	</insert>
</mapper>
