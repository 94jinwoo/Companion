<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="session">
	
	<!-- 이용후기 & 이용후기 개수(review_count) 파악  -->
	<select id="sessionList" resultType="sessionBean" parameterType="int">
		select product_id,product_name,product_image,product_thumb,category_id from product where product_id = #{product_id};
	</select>
  </mapper>
